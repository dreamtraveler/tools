ubuntu 改密码
sudo stop mysql

# sudo /usr/bin/mysqld_safe --skip-grant-tables
mysql> use mysql;
mysql> update user set Password = PASSWORD('root') where User ='root';
# mysql 5.7后密码字段为 authentication_string

sudo restart mysql

netstat -an | grep 3306

