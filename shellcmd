# 查看所有侦听状态的端口
netstat -nuptl

#centos version
cat /etc/redhat-release

//查硬盘信息
sudo fdisk -l
cat /sys/block/nvme0n1/queue/rotational

#查看 socket 种状态数
netstat -n | awk '/^tcp/ {++S[$NF]} END {for(a in S) print a, S[a]}'

#批量杀进程
ps axu | grep /data/user00/cooking | awk '{print $2}' | xargs -I {} kill -9 {}
